<Window x:Class="LR3.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LR3"
        mc:Ignorable="d"
        Title="Настройки" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Толщина линии:"/>
            <TextBox x:Name="lineThicknessBox" Text="2"/>
            <Label Content="Цвет линии:"/>
            <Button x:Name="lineColorButton" Content="Выбрать цвет линии" Click="LineColorButton_Click"/>
            <Label Content="Цвет фона:"/>
            <Button x:Name="backgroundColorButton" Content="Выбрать цвет фона" Click="BackgroundColorButton_Click"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
                <Button Content="Сохранить" Click="OkButton_Click" Margin="5"/>
                <Button Content="Назад" Click="CancelButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
